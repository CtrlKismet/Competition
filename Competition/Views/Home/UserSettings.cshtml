@model student

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "用户设置";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>用户设置</title>
</head>
<body>
    <h3>用户信息 : </h3>
    <form action="/Home/UserSettings" method="post">
        用户名 : <input type="text" name="StudentID" value="@Model.StudentID" readonly="readonly"/><br />
        学号 : <input type="text" name="StudentName" value="@Model.StudentName" readonly="readonly"/><br />
        班级：<input type="text" name="ClassID" value="@Model.ClassID"/><br />
        性别 :
        @if (Model.Gender == 1)
        {
            <label><input type="radio" name="Gender" value="1" checked="checked"/>男 </label>
            <label><input type="radio" name="Gender" value="0" />女 </label><br />
        }
        else
        {
            <label><input type="radio" name="Gender" value="1" />男 </label>
            <label><input type="radio" name="Gender" value="0" checked="checked"/>女 </label><br />
        }
        年级 :
        <select name="Grade">
            @if (Model.Grade == 1) {<option value="1" selected="selected">大一</option>}else{<option value="1">大一</option>}
            @if (Model.Grade == 2) {<option value="2" selected="selected">大二</option>}else{<option value="2">大二</option>}
            @if (Model.Grade == 3) {<option value="3" selected="selected">大三</option>}else{<option value="3">大三</option>}
            @if (Model.Grade == 4) {<option value="4" selected="selected">大四</option>}else{<option value="4">大四</option>}
        </select><br />
        电话 : <input type="text" name="Phonenumber" value="@Model.Phonenumber"/><br />
        邮箱 : <input type="text" name="Email" value="@Model.Email"/><br />
        <button type="submit">确认更改</button>
    </form>
</body>
</html>
