@using Competition.ViewModels
@model List<team>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "参赛队伍";
    string member = "";
    MsgBusinessLayer msgBal = new MsgBusinessLayer();
    List<string> studentID = new List<string>();
    sbyte? p = 0;//当前登录用户的权限
    if (User.Identity.Name != "")
    {
        p = msgBal.GetStudentByID(User.Identity.Name).HasPermission;
    }
    else
    {
        p = 0;
    }
    int count = 0;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
</head>
<body>
    <p id="hasPermission" hidden="hidden">@p</p>
    <table class="table table-bordered table-hover" style="width:50%;position:center;">
        <thead>
            <tr>
                <th>队伍编号</th>
                <th>队伍成员</th>
                <!--
                <th class="permision">电话号码</th>
                <th class="permision">邮箱</th>
                -->
            </tr>
        </thead>
        <tbody>
            @if (Model.Count != 0)
            {
                foreach (team t in Model)
                {
                    studentID = msgBal.GetMessage(t.Member);
                    member = "";count++;
                    foreach (string id in studentID)
                    {
                        student s = msgBal.GetStudentByID(id);
                        if (member != "")
                        {
                            <tr>
                                <td>@s.StudentName</td>
                                <!--
                                <td class="permision">@s.Phonenumber</td>
                                <td class="permision">@s.Email</td>
                                -->
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td rowspan="@t.Number" class="text-center" style="font-size:larger;">@count</td>
                                <td>@s.StudentName</td>
                                <!--
                                <td class="permision">@s.Phonenumber</td>
                                <td class="permision">@s.Email</td>
                                -->
                            </tr>
                            member = "1";
                        }
                    }
                }
            }
        </tbody>
    </table>
    @if (Model.Count != 0&&p!=0)
    {
        <div><a href="/Manage/Excel?ID=@Model.First().CID" class="btn btn-default btn-lg"><span class="glyphicon glyphicon-share"></span>导出到Excel</a></div>
    }
    <!--<script>
        $(function () {
            var x = $("#hasPermission").text();
            if (x == '0')
            {
                $(".permision").hide();
            }
        });
    </script>-->
</body>
</html>
