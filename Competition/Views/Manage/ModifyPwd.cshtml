@model student
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "修改密码";
}

<div class="page">
    <form action="/Manage/ModifyPwd" method="post" class="userinfo-form form-horizontal" data-toggle="validator">
        <input name="StudentID" id="StudentID" style="display:none;" value="@Model.StudentID" />
        <div id="password" class="form-group">
            <label class="col-sm-2 control-label">原密码</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" name="Email" id="Email" />
            </div>
        </div>
        <div id="password" class="form-group">
            <label for="Password" class="col-sm-2 control-label">新密码</label>
            <div class="col-sm-10">
                <input class="form-control" type="password" name="Password" id="Password" pattern="^.{6,}$" required data-error="密码至少 6 位" />
                <div class="help-block with-errors"></div>
            </div>
        </div>
        <div class="form-group">
            <label for="Email" class="col-sm-2 control-label"></label>
            <div class="col-sm-10">
                <button type="submit" class="btn btn-default">确认更改</button>
            </div>
        </div>
    </form>
</div>