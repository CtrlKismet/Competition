@using Competition.ViewModels
@model List<team>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "参赛队伍";
    string member = "";
    MsgBusinessLayer msgBal = new MsgBusinessLayer();
    List<string> studentID = new List<string>();
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
</head>
<body>
    <table class="table table-bordered table-hover" style="width:50%;position:center;">
        <thead>
            <tr>
                <th>队伍编号</th>
                <th>队伍成员</th>
                <th hidden="hidden">电话号码</th>
                <th hidden="hidden">邮箱</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count != 0)
            {
                foreach (team t in Model)
                {
                    studentID = msgBal.GetMessage(t.Member);
                    member = "";
                    foreach (string id in studentID)
                    {
                        student s = msgBal.GetStudentByID(id);
                        if (member != "")
                        {
                            <tr>
                                <td>@s.StudentName</td>
                                <td hidden="hidden">@s.Phonenumber</td>
                                <td hidden="hidden">@s.Email</td>
                            </tr>
                        }
                        else
                        {
                            <tr>
                                <td rowspan="@t.Number" class="text-center" style="font-size:larger;">@t.ID</td>
                                <td>@s.StudentName</td>
                                <td hidden="hidden">@s.Phonenumber</td>
                                <td hidden="hidden">@s.Email</td>
                            </tr>
                            member = "1";
                        }
                    }
                }
            }
        </tbody>
    </table>
</body>
</html>
