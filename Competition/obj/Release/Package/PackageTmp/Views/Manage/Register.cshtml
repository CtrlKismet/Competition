@model competition

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = Model.CompetitionName + " | 报名";
}

<div class="page">
    <h3>请填写队伍成员学号</h3>
    <form action="/Manage/Register" method="post">
        <input type="hidden" name="number" value="@Model.CompetitionID" />
        <div class="form-group">
            <input type="number" class="form-control" name="member" placeholder="学号" required />
        </div>
        @for (int i = 1; i < Model.TeamLimit; i++)
        {
            <div class="form-group">
                <input type="number" class="form-control" name="member" placeholder="学号" />
            </div>
        }
        <div class="form-group">
            <button class="btn btn-default" type="submit">提交队伍信息</button>
        </div>
        <div class="alert alert-info">注意：第一个人为队长</div>
    </form>
</div>
