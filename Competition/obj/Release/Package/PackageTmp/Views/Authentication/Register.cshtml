
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "注册";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>
<body>
    <div class="container page">
        <form action="/Authentication/Register" method="post">
            <table class="table-condensed">
                <tr>
                    <th class="text-center">学号</th>
                    <td><input type="text" name="StudentID" required/></td>
                </tr>
                <tr>
                    <th class="text-center">班级</th>
                    <td><input type="text" name="ClassID"  required/></td>
                </tr>
                <tr>
                    <th class="text-center">用户名</th>
                    <td><input type="text" name="StudentName" required/></td>
                </tr>
                <tr>
                    <th class="text-center">密码</th>
                    <td><input type="password" name="Password" required/></td>
                </tr>
                <tr>
                    <th class="text-center">重复密码&nbsp;&nbsp;&nbsp;</th>
                    <td><input type="password" name="Concerned" /></td>
                </tr>
                <tr>
                    <th class="text-center">性别</th>
                    <td>
                        <label><input type="radio" name="Gender" value="1" required/>男 </label>
                        <label><input type="radio" name="Gender" value="0" />女 </label>
                    </td>
                </tr>
                <tr>
                    <th class="text-center">年级</th>
                    <td>
                        <select name="Grade">
                            <option value="1">大一</option>
                            <option value="2">大二</option>
                            <option value="3">大三</option>
                            <option value="4">大四</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <th class="text-center">电话号码</th>
                    <td><input type="text" name="Phonenumber" required/></td>
                </tr>
                <tr>
                    <th class="text-center">邮箱</th>
                    <td><input type="text" name="Email" required/></td>
                </tr>
                <tr>
                    <th></th>
                    <td><button class="btn btn-default">注册</button></td>
                </tr>
            </table>
        </form>
    </div>
</body>
</html>
