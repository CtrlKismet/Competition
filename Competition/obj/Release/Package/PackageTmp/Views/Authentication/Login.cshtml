@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "登录";
}

@if (!ViewContext.ViewData.ModelState.IsValid)
{
    @Html.ValidationMessage("CredentialError", new { Class = "alert alert-danger" }, "div")
}
<form action="/Authentication/Login" method="post" align="center" class="login-form">
    <div class="form-group" align="center">
        <input type="text" class="form-control" name="StudentID" required title="Username required" placeholder="学号">
    </div>
    <div class="form-group" align="center">
        <input type="password" class="form-control" name="Password" required title="Password required" placeholder="密码">
    </div>
    <button class="btn btn-info" style="width:130px;">登录</button>
    <a href="/Authentication/Register" class="btn btn-warning" style="width:130px;">注册</a>
</form>