@using Competition.ViewModels
@model ViewCompetition
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "首页";
    string group = "";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Home</title>
</head>
<body>
    <div style="font-size:medium;font-weight:bold;">
        所有比赛&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        @if (Model.HasPermission)
        {
            <a href="/Manage/Add" class="btn btn-default btn-sm">
                    <span class="glyphicon glyphicon-plus"></span> 新建比赛
            </a>
        }
    </div>
    <br />
    @if (Model.Competitions.Count != 0)
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>比赛编号</th>
                    <th>比赛名称</th>
                    <th>比赛开始日期</th>
                    <th>报名截止日期</th>
                    <th>参赛年级</th>
                    <th>管理</th>
                </tr>
            </thead>
            <tbody>
                @foreach (competition c in Model.Competitions)
                {
                    group = "";
                    if (c.Groups >= 1000)
                    {
                        group += "大一";
                    }
                    if (c.Groups % 1000 >= 200)
                    {
                        if (group != "")
                        {
                            group += "、";
                        }
                        group += "大二";
                    }
                    if (c.Groups % 100 >= 30)
                    {
                        if (group != "")
                        {
                            group += "、";
                        }
                        group += "大三";
                    }
                    if (c.Groups % 10 >= 4)
                    {
                        if (group != "")
                        {
                            group += "、";
                        }
                        group += "大四";
                    }
                    <tr>
                        <td>@c.CompetitionID</td>
                        <td><a href="/Home/ViewCompetition?ID=@c.CompetitionID">@c.CompetitionName</a></td>
                        <td>@c.StartTime.ToString("D")</td>
                        <td>@c.EndTime.ToString("D")</td>
                        <td>@group</td>
                        @if (Model.HasPermission)
                        {
                            <td>
                                <a href="/Manage/Register?ID=@c.CompetitionID">报名</a> |
                                <a href="/Manage/ViewTeams?ID=@c.CompetitionID">查看队伍</a> |
                                <a href="/Manage/Edit?ID=@c.CompetitionID">编辑</a> |
                                <a href="/Manage/Delete?ID=@c.CompetitionID">删除</a>
                            </td>
                        }
                        else
                        {
                            <td>
                                <a href="/Manage/Register?ID=@c.CompetitionID">报名</a> |
                                <a href="/Manage/ViewTeams?ID=@c.CompetitionID">查看队伍</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    }
</body>
</html>
